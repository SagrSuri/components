{
  "compilerOptions": {
    "declaration": true,               // Generates declaration (.d.ts) files
    "emitDeclarationOnly": true,       // Only emit declaration files, no compiled JS
    "outDir": "./dist",                // Output directory for compiled files
    "jsx": "react",                    // Support JSX with React
    "module": "ESNext",                // Use ESNext module system
    "target": "ESNext",                // Compile for modern JavaScript environments
    "esModuleInterop": true,           // Enable interoperability between CommonJS and ES Modules
    "strict": true,                    // Enable all strict type-checking options
    "allowJs": true,                   // Allow JavaScript files to be compiled
    "skipLibCheck": true               // Skip type checking of declaration files
  },
  "include": ["src/**/*"],             // Include all files under the 'src' folder
  "exclude": ["dist", "node_modules"]  // Exclude 'dist' and 'node_modules' from compilation
}
